    "irc"
  ],
  "author": "David Petersen <davjpetersen@gmail.com>",
  "version": "0.3.5",
  "main": "./lib/subway.js",
  "bin": {
    "subway": "./subway.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "async": "^3.2.5",
    "backbone": "^1.6.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "bower": "^1.8.14",
    "cookie-parser": "^1.4.6",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "gaze": "^1.1.3",
    "glob": "^10.4.2",
    "grunt": "^1.6.1",
    "grunt-contrib-clean": "^2.0.1",
    "grunt-contrib-cssmin": "^5.0.0",
    "grunt-contrib-jade": "^1.0.0",
    "grunt-contrib-symlink": "^0.3.0",
    "grunt-contrib-uglify": "^5.2.2",
    "grunt-react": "^0.12.3",
    "grunt-styl": "^0.3.0",
    "irc": "^0.5.2",
    "jugglingdb": "^2.0.1",
    "jugglingdb-sqlite3": "0.0.x",
    "rework-importer": "^0.4.0",
    "socket.io": "^4.7.5",
    "suspend": "^0.7.0",
    "underscore": "^1.13.6",
    "uuid": "^9.0.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "chai": "^4.5.0",
    "eslint": "^8.57.1",
    "mocha": "^10.7.3",
    "nyc": "^17.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^19.0.2",
    "socket.io-client": "^4.7.5",
    "supertest": "^7.0.0"
  },
  "scripts": {
    "start": "./subway.js",
    "test": "mocha test/**/*.test.js --timeout 10000",
    "test:unit": "mocha test/unit/**/*.test.js",
    "test:integration": "mocha test/integration/**/*.test.js --timeout 10000",
    "test:watch": "mocha test/**/*.test.js --watch",
    "test:coverage": "nyc --reporter=html --reporter=lcov --reporter=text npm test",
    "lint": "eslint '**/*.js' --ignore-pattern 'node_modules/' --ignore-pattern 'tmp/' --ignore-pattern 'coverage/'",
    "lint:fix": "npm run lint -- --fix",
    "format:check": "echo 'Format check placeholder - consider adding prettier'",
    "type-check": "echo 'Type check placeholder - no TypeScript in use'",
    "audit:check": "npm audit --audit-level=moderate",
    "ci": "npm run lint && npm run test:coverage && npm run audit:check",
    "validate": "npm run lint && npm test"
  }
}
